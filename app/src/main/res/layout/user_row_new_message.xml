<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/username_new"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:textColor="@color/black"
        android:text="username"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_new"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/imageView_new"
        app:layout_constraintTop_toTopOf="@+id/imageView_new" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_new"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>